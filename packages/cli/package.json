{
  "name": "nocioun",
  "version": "1.0.0",
  "description": "CLI tool to sync Google contacts with Notion database",
  "main": "dist/index.js",
  "bin": {
    "nocioun": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:cli": "tsc && chmod +x dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "dev": "ts-node index.ts",
    "cli": "ts-node index.ts",
    "prepublishOnly": "npm run clean && npm run build:cli",
    "prepack": "npm run clean && npm run build:cli",
    "release:check": "npm run clean && npm run build:cli && npm test && ./dist/index.js --help"
  },
  "keywords": [
    "cli",
    "google-contacts",
    "notion",
    "oauth",
    "sync",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaonmir/nocioun.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@nocioun/core": "workspace:*",
    "@notionhq/client": "^3.1.3",
    "axios": "^1.10.0",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^126.0.1",
    "googleapis-common": "^7.2.0",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.8.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
