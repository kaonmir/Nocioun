{
  "name": "@nocioun/core",
  "version": "1.0.0",
  "description": "Core utilities for Notion integration",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./map": {
      "types": "./dist/src/map/map.d.ts",
      "import": "./dist/src/map/map.js",
      "require": "./dist/src/map/map.js",
      "default": "./dist/src/map/map.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "dev": "tsc --watch"
  },
  "files": [
    "dist/src/",
    "README.md"
  ],
  "keywords": [
    "notion",
    "integration",
    "typescript",
    "nocioun"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaonmir/nocioun.git",
    "directory": "packages/core"
  },
  "dependencies": {
    "@notionhq/client": "^3.1.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.8.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
