{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/cli"
    }
  ],
  "include": [],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/node_modules"
  ]
}